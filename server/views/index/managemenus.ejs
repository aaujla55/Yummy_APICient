 <% include ../partials/header.ejs %>

 <!-- menu -->
  <section id="menu-list" class="section-padding">
    <div class="container">
      <div class="row">
        <div class="col-md-12 text-center marb-35">
          <h1 class="header-h">Current Menu's</h1>
          <p class="header-p"></p>
           <p class="header-p"><%=  %></p>
         <a class="header-p" href="/addmenu">Add a new Item</a>
        </div>

        <div id="menu-wrapper">
    <% for(var count=0; count< menuItems.length; count++) {%>
            <div class="menu-restaurant">
                <span class="clearfix">
                <a class="menu-title" href="#"><%= menuItems[count].name %></a>
                <span style="left: 166px; right: 44px;" class="menu-line"></span>
              
                <span class="menu-price"><%= menuItems[count].price%></span>
                </span>
                <span class="edit-menu-subtile"><a href="<%= "/edit/" + menuItems[count].item_id %>">Edit</a></span>
                <span class="edit-menu-subtile"><a href="<%= "/delete/" + menuItems[count].item_id %>">Delete</a></span>
            </div>
       <% } %>

      </div>
    </div>
  </section>
  <!--/ menu -->
