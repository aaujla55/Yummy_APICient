            <div class="menu-restaurant">
                <span class="clearfix">
                <a class="menu-title" href="#"><%= menuName[count] %></a>
                <span style="left: 166px; right: 44px;" class="menu-line"></span>
                 <% for(var i=0; i< price.length; i++) {%>
                <span class="menu-price">$price[i]</span>
                </span>
                <span class="edit-menu-subtile"><a href="#">Edit</a></span>
                <span class="edit-menu-subtile"><a href="#">Delete</a></span>
            </div>
       <% } %>

      </div>
    </div>
  </section>
